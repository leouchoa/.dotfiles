# ================================
# Homebrew Bundle File
# ================================
# Install all packages by running:
#   brew bundle --v
#
# Or from anywhere:
#   brew bundle --file ~/.dotfiles/.config/Brewfile --v
#
# ================================

# ================================
# Taps
# ================================
tap "homebrew/bundle"
tap "homebrew/cask-fonts"

